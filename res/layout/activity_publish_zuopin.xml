<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000">
        <FrameLayout
                android:id="@+id/backView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
            <ImageView
                    android:layout_width="11dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_back"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="上传作品"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"/>
        <FrameLayout
                android:id="@+id/rightView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_alignParentRight="true">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="发布"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"/>
        </FrameLayout>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp">
            <!--选择图片-->
            <com.xy.shuhua.ui.home.photo_choose.PhotoSelectView
                    android:id="@+id/photoSelectView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"/>
            <!--作品名称-->
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="#e3e3e3"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:id="@+id/nameView">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="作品名称"
                        android:textColor="#333333"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                <ImageView
                        android:id="@+id/arrowOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="right|center_vertical"
                        android:layout_toLeftOf="@id/arrowOne"
                        android:layout_marginRight="10dp"
                        android:textColor="#b3b3b3"
                        android:textSize="14sp"
                        android:singleLine="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="#e3e3e3"/>
            <!--价格-->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:id="@+id/priceView">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="价格"
                        android:textColor="#333333"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                <ImageView
                        android:id="@+id/arrowTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                <TextView
                        android:id="@+id/priceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="right|center_vertical"
                        android:layout_toLeftOf="@id/arrowTwo"
                        android:layout_marginRight="10dp"
                        android:textColor="#b3b3b3"
                        android:textSize="14sp"
                        android:singleLine="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="#e3e3e3"/>
            <!--类别-->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:id="@+id/leiBieView">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="类别"
                        android:textColor="#333333"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                <ImageView
                        android:id="@+id/arrowThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                <TextView
                        android:id="@+id/leiBieTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="right|center_vertical"
                        android:layout_toLeftOf="@id/arrowThree"
                        android:layout_marginRight="10dp"
                        android:textColor="#b3b3b3"
                        android:textSize="14sp"
                        android:singleLine="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="#e3e3e3"/>
            <!--材质-->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:id="@+id/caiZhiView">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="材质"
                        android:textColor="#333333"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                <ImageView
                        android:id="@+id/arrowFour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                <TextView
                        android:id="@+id/caiZhiTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="right|center_vertical"
                        android:layout_toLeftOf="@id/arrowFour"
                        android:layout_marginRight="10dp"
                        android:textColor="#b3b3b3"
                        android:textSize="14sp"
                        android:singleLine="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="#e3e3e3"/>
            <!--尺寸-->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:id="@+id/chiCunView">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="尺寸"
                        android:textColor="#333333"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                <ImageView
                        android:id="@+id/arrowFive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                <TextView
                        android:id="@+id/chiCunTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="right|center_vertical"
                        android:layout_toLeftOf="@id/arrowFive"
                        android:layout_marginRight="10dp"
                        android:textColor="#b3b3b3"
                        android:textSize="14sp"
                        android:singleLine="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="#e3e3e3"/>
            <!--创作时间-->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:id="@+id/createTimeView">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="创作时间"
                        android:textColor="#333333"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                <ImageView
                        android:id="@+id/arrowSix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                <TextView
                        android:id="@+id/createTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="right|center_vertical"
                        android:layout_toLeftOf="@id/arrowSix"
                        android:layout_marginRight="10dp"
                        android:textColor="#b3b3b3"
                        android:textSize="14sp"
                        android:singleLine="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="#e3e3e3"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>