<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000">
        <FrameLayout
                android:id="@+id/backView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
            <ImageView
                    android:layout_width="11dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_back"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="完善资料"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <RelativeLayout
                android:id="@+id/modifyAvatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
            <ImageView
                    android:id="@+id/avatarImage"
                    android:layout_width="46.67dp"
                    android:layout_height="46.67dp"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="修改密码"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="#ff0000"/>
            <ImageView
                    android:id="@+id/iconOne"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:src="#ff0000"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textSize="16sp"
                    android:textColor="#aeaeae"
                    android:text="修改头像"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iconOne"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="#c8c8c8"/>
        <RelativeLayout
                android:id="@+id/modifyNam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="昵称"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"/>
            <ImageView
                    android:id="@+id/iconTwo"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:src="#ff0000"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"/>
            <TextView
                    android:id="@+id/nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textSize="16sp"
                    android:textColor="#aeaeae"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iconTwo"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="#c8c8c8"/>
        <RelativeLayout
                android:id="@+id/areaView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="地区"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"/>
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:src="#ff0000"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="#c8c8c8"/>
        <RelativeLayout
                android:id="@+id/ageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="年龄"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"/>
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:src="#ff0000"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="#c8c8c8"/>
        <RelativeLayout
                android:id="@+id/jieShaoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="个人介绍"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"/>
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:src="#ff0000"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="#c8c8c8"/>
        <TextView
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="保存"
                android:gravity="center"
                android:background="#2c2c2c"/>
    </LinearLayout>
</LinearLayout>