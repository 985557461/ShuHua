<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="12dp"
              android:paddingBottom="15dp"
              android:paddingLeft="11dp"
              android:paddingRight="11dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.xy.shuhua.util.round_image.CircleImageView
                android:id="@+id/avatarIV"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:src="@drawable/me_avatar_boy"/>
        <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#d1d1d1"
                android:text="简介"
                android:layout_alignBottom="@id/avatarIV"
                android:layout_toRightOf="@id/avatarIV"
                android:layout_marginLeft="9dp"
                android:singleLine="true"
                android:ellipsize="end"/>
        <TextView
                android:id="@+id/authorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#333333"
                android:text="李东辉"
                android:layout_toRightOf="@id/avatarIV"
                android:layout_above="@id/desc"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="6dp"/>
        <FrameLayout
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/avatarIV"
                android:layout_marginBottom="5dp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@drawable/gray_stroken_trans_bg_shape"
                android:visibility="gone">
            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#ff0000"
                    android:layout_gravity="center"/>
        </FrameLayout>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#d1d1d1"
          android:layout_marginLeft="56dp"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="13.33dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        <com.xy.shuhua.ui.view.FixWidthImageView
                android:id="@+id/imageOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="center"
                android:background="@drawable/icon_art_cover_image"
                android:layout_marginRight="10dp"/>
        <com.xy.shuhua.ui.view.FixWidthImageView
                android:id="@+id/imageTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="center"
                android:background="@drawable/icon_art_cover_image"
                android:layout_marginRight="10dp"/>
        <com.xy.shuhua.ui.view.FixWidthImageView
                android:id="@+id/imageThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="center"
                android:background="@drawable/icon_art_cover_image"/>
    </LinearLayout>
</LinearLayout>