<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000">
        <FrameLayout
                android:id="@+id/backView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
            <ImageView
                    android:layout_width="11dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_back"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="认证设计师"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp">
                <View android:layout_width="8dp"
                      android:layout_height="match_parent"
                      android:background="#010101"
                      android:layout_marginRight="10dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="认证设计师"
                        android:textColor="#010101"
                        android:textSize="18sp"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="8dp"
                  android:background="#f8f8f8"
                  android:layout_marginBottom="30dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="8dp">
                <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:text="1"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:background="@drawable/renzheng_tips_bg_shape"
                        android:layout_marginRight="14dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="您的账号名称是真实姓名或者常用笔名"
                        android:textColor="#333333"
                        android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="8dp">
                <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:text="2"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:background="@drawable/renzheng_tips_bg_shape"
                        android:layout_marginRight="14dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="至少发表过10件作品"
                        android:textColor="#333333"
                        android:textSize="12sp"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="8dp">
                <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:text="3"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:background="@drawable/renzheng_tips_bg_shape"
                        android:layout_marginRight="14dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="已经填写个人简介并且承认内容真实可信"
                        android:textColor="#333333"
                        android:textSize="12sp"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="8dp">
                <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:text="4"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:background="@drawable/renzheng_tips_bg_shape"
                        android:layout_marginRight="14dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="必须绑定手机号"
                        android:textColor="#333333"
                        android:textSize="12sp"/>
            </LinearLayout>



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="8dp">
                <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:text="5"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:background="@drawable/renzheng_tips_bg_shape"
                        android:layout_marginRight="14dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="必须绑定邮箱"
                        android:textColor="#333333"
                        android:textSize="12sp"/>
            </LinearLayout>



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="24dp">
                <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:text="6"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:background="@drawable/renzheng_tips_bg_shape"
                        android:layout_marginRight="14dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="上传了真实头像,并且头像为本人照片或者本人原创作品"
                        android:textColor="#333333"
                        android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/nextStepView"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:text="下一步"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="#353535"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>