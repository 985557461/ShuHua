<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#f8f8f8">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="135dp">
        <com.xy.shuhua.ui.home.HomeBannerViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <com.xy.shuhua.util.viewpager_indicator.CirclePageIndicator
                android:id="@+id/circlePageIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="20dp"/>
    </FrameLayout>
    <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="艺术家"
                android:layout_marginBottom="11dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="20dp">
                <com.xy.shuhua.ui.view.FixWidthFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.xy.shuhua.util.round_image.CircleImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon_default_avatar"
                            android:scaleType="centerCrop"/>
                </com.xy.shuhua.ui.view.FixWidthFrameLayout>
                <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:text="关山月"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="20dp">
                <com.xy.shuhua.ui.view.FixWidthFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.xy.shuhua.util.round_image.CircleImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon_default_avatar"
                            android:scaleType="centerCrop"/>
                </com.xy.shuhua.ui.view.FixWidthFrameLayout>
                <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:text="关山月"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="20dp">
                <com.xy.shuhua.ui.view.FixWidthFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.xy.shuhua.util.round_image.CircleImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon_default_avatar"
                            android:scaleType="centerCrop"/>
                </com.xy.shuhua.ui.view.FixWidthFrameLayout>
                <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:text="关山月"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="20dp">
                <com.xy.shuhua.ui.view.FixWidthFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.xy.shuhua.util.round_image.CircleImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon_default_avatar"
                            android:scaleType="centerCrop"/>
                </com.xy.shuhua.ui.view.FixWidthFrameLayout>
                <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:text="关山月"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="20dp">
                <com.xy.shuhua.ui.view.FixWidthFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.xy.shuhua.util.round_image.CircleImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon_default_avatar"
                            android:scaleType="centerCrop"/>
                </com.xy.shuhua.ui.view.FixWidthFrameLayout>
                <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:text="关山月"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                <com.xy.shuhua.ui.view.FixWidthFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.xy.shuhua.util.round_image.CircleImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#000000"/>
                </com.xy.shuhua.ui.view.FixWidthFrameLayout>
                <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:text="更多"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>