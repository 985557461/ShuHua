<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000">
        <FrameLayout
                android:id="@+id/backView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
            <ImageView
                    android:layout_width="11dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_back"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
                android:id="@+id/picView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:layout_alignParentRight="true">
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="22dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_pic"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
                android:id="@+id/likeView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_toLeftOf="@id/picView">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_like_white"
                    android:layout_gravity="center"/>
        </FrameLayout>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <ImageView
                    android:id="@+id/mainIV"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_art_cover_image"/>
            <RelativeLayout
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:text="我听到音乐就看到了色彩"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"/>
                <ImageView
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_upload"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@id/name"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/guiGe"
                        android:text="120cmx120cm"
                        android:textSize="12sp"
                        android:textColor="#dbdbdb"
                        android:layout_marginTop="16dp"
                        android:layout_below="@id/name"
                        android:layout_alignLeft="@id/name"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price"
                        android:text="3000"
                        android:textSize="14sp"
                        android:textColor="#f66563"
                        android:layout_marginTop="16dp"
                        android:layout_alignBottom="@id/guiGe"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:background="#dbdbdb"/>
            <RelativeLayout
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.xy.shuhua.util.round_image.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/authorAvatar"
                        android:src="@drawable/icon_default_avatar"/>
                <RelativeLayout
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/authorAvatar"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/authorName"
                            android:text="李争"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/zuopinCount"
                            android:text="12件作品"
                            android:textSize="14sp"
                            android:textColor="#dbdbdb"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/authorName"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fensiCount"
                            android:text="24个粉丝"
                            android:textSize="14sp"
                            android:textColor="#dbdbdb"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/zuopinCount"
                            android:layout_alignBottom="@id/zuopinCount"/>
                </RelativeLayout>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:background="#dbdbdb"/>
            <RelativeLayout
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/time"
                        android:text="2016/3/23"
                        android:textSize="15sp"
                        android:textColor="#333333"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bianhao"
                        android:text="默认艺术 0000043543532"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="8dp"
                  android:background="#f0f0f3"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="相关商品"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="15dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                    <com.xy.shuhua.ui.art.RelevantItemView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="12dp"/>
                    <com.xy.shuhua.ui.art.RelevantItemView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <com.xy.shuhua.ui.art.RelevantItemView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="12dp"/>
                    <com.xy.shuhua.ui.art.RelevantItemView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>